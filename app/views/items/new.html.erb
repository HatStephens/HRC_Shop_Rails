<br/>
<%= form_for @item, html: {class: 'pure-form pure-form-aligned', multipart: true} do |f| %>
<section class='pure-control-group'>
  <%= f.label :name %>
  <%= f.text_field :name %><br/>
</section>
<section class='pure-control-group'>
  <%= f.label :description %>
  <%= f.text_field :description, class: 'pure-input-2-3'%><br/>
</section>
<section class='pure-control-group'>
  <%= f.label :price %>
  <%= f.text_field :price %>
</section>
<section class='pure-control-group'>
  <%= f.label :photo %>
  <%= f.file_field :photo %>
</section>
<section class="pure-controls">
  <%= f.submit 'Submit Item', class: 'pure-button pure-button-primary' %>
</section>
<% end %>