<section "indexwrap">
  <section class="leftcol">
    <% if current_user %>
      <%= link_to 'Add a new Item', new_item_path, class:"addnew" %>
    <% end %>
    <h3>Search Pins</h3>
    <%= form_tag items_path, :method => 'get', html: {class: 'pure-form pure-form-aligned', multipart: true} do %>
      <section class='pure-control-group'>
        <%= label_tag :location %>
        <%= collection_select(:search, :location, Item::LOCATIONS, :to_s, :titleize) %>
      </section>
      <br/>
      <section class='pure-control-group'>
        <%= label_tag :occasion %>
        <%= collection_select(:search, :occasion, Item::OCCASIONS, :to_s, :titleize) %>
      </section>
      <p>
        Or type a keyword:
      </p>
      <section class='pure-control-group'>
        <%= label_tag :keyword %>
        <%= text_field_tag :keywordsearch, params[:keywordsearch] %>
      </section>
      <section class='pure-controls'>
        <%= submit_tag "Search", :name => nil %>
      </section>
    <% end %>
  </section>

  <section class="midcol">
    <% if @items.any? %>
      <% @items.each do |item| %>
        <section class="item_image">
          <p class="item_name">
            <%= link_to item.name, item, class: "item_name" %>
          </p>
          <p class="image_thumb">
            <%= image_tag item.photo.url(:thumb) %>
          </p>
        </section>
      <% end %>
    <% else %>
      <p class="no_match">Sorry, no items match your Search criteria.</p>
      <%= params.inspect %>
    <% end %>
  </section>

</section>